<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<Button mnemonicParsing="false" onAction="#openBook" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <graphic>
      <VBox alignment="CENTER" prefHeight="80.0" prefWidth="120.0" spacing="3.0" styleClass="kg-item">
         <children>
            <ImageView fx:id="img" fitHeight="140.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="title" text="《标题》">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="author" text="作者" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </graphic>
</Button>
